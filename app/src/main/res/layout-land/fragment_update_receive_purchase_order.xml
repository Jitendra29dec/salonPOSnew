<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supplier"
                android:textColor="@color/black"
                android:textSize="@dimen/_6sdp" />

            <Spinner
                android:id="@+id/vendorSpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_18sdp"
                android:background="@drawable/spinner_bg"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PO Date"
                android:textColor="@color/black"
                android:textSize="@dimen/_6sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_18sdp"
                android:background="@drawable/rounded_corner_grey_bg"
                android:hint="Enter Date"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_6sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PO Number"
                android:textColor="@color/black"
                android:textSize="@dimen/_6sdp" />

            <EditText
                android:id="@+id/barcodeEdiText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_18sdp"
                android:background="@drawable/rounded_corner_grey_bg"
                android:hint="Enter PO"
                android:inputType="number"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_6sdp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Product Id"
            android:textColor="@color/black"
            android:textSize="@dimen/_6sdp"
            app:fontFamily="@font/raleway" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Product"
            android:textColor="@color/black"
            android:textSize="@dimen/_6sdp"
            app:fontFamily="@font/raleway" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Qty"
            android:textColor="@color/black"
            android:textSize="@dimen/_6sdp"
            app:fontFamily="@font/raleway" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Receive Qty"
            android:textColor="@color/black"
            android:textSize="@dimen/_6sdp"
            app:fontFamily="@font/raleway" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Rate($)"
            android:textColor="@color/black"
            android:textSize="@dimen/_6sdp"
            app:fontFamily="@font/raleway" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Note"
            android:textColor="@color/black"
            android:textSize="@dimen/_6sdp"
            app:fontFamily="@font/raleway" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Tax(%)"
            android:textColor="@color/black"
            android:textSize="@dimen/_6sdp"
            app:fontFamily="@font/raleway" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Tax($)"
            android:textColor="@color/black"
            android:textSize="@dimen/_6sdp"
            app:fontFamily="@font/raleway" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Amount($)"
            android:textColor="@color/black"
            android:textSize="@dimen/_6sdp"
            app:fontFamily="@font/raleway" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Action"
            android:textColor="@color/black"
            android:textSize="@dimen/_6sdp"
            app:fontFamily="@font/raleway" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewListItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_2sdp" />

</LinearLayout>