<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_21sdp"
                android:layout_weight=".75"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_6sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bottom_selected_text_color"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/add_deposit_amount"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:textSize="20sp"
                        app:fontFamily="@font/raleway_medium" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:text="Sale Amount"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fontFamily="@font/raleway_medium" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/totalDepositAmount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingEnd="@dimen/_6sdp"
                            android:text="$00"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fontFamily="@font/raleway_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_6sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:text="Case Tip"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fontFamily="@font/raleway_medium" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/caseTipAmount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingEnd="@dimen/_6sdp"
                            android:text="00"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fontFamily="@font/raleway_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_6sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:text="Total Due"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fontFamily="@font/raleway_medium" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/totalDueAmount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingEnd="@dimen/_6sdp"
                            android:text="$00"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fontFamily="@font/raleway_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:text="Cash"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fontFamily="@font/raleway_medium" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/cashAmountTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingTop="@dimen/_4sdp"
                            android:paddingEnd="@dimen/_6sdp"
                            android:hint="0.00"
                            android:paddingBottom="@dimen/_4sdp"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fontFamily="@font/raleway_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:text="Credit"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fontFamily="@font/raleway_medium" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/creditAmountTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:hint="0.00"
                            android:paddingTop="@dimen/_4sdp"
                            android:paddingEnd="@dimen/_6sdp"
                            android:paddingBottom="@dimen/_4sdp"
                            android:textColorHint="@color/black"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fontFamily="@font/raleway_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/rewardHeading"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:text="Reward"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fontFamily="@font/raleway_medium" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/rewardAmountTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:hint="0.00"
                            android:textColorHint="@color/black"
                            android:paddingTop="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_4sdp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fontFamily="@font/raleway_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:text="Gift Card"
                            android:id="@+id/giftCardHeading"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fontFamily="@font/raleway_medium" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/giftCardNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:background="@drawable/edt_bg_gray"
                            android:gravity="right"
                            android:hint="Gift Card"
                            android:padding="@dimen/_4sdp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fontFamily="@font/raleway_medium" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/giftCardSelectedValue"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:hint="0.00"
                            android:visibility="gone"
                            android:paddingTop="@dimen/_4sdp"
                            android:paddingEnd="@dimen/_6sdp"
                            android:paddingBottom="@dimen/_4sdp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp"
                            app:fontFamily="@font/raleway_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/ceritficateHeading"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:text="Certificate"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fontFamily="@font/raleway_medium" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/certificateNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:background="@drawable/edt_bg_gray"
                            android:gravity="right"
                            android:hint="Certificate"
                            android:padding="@dimen/_4sdp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fontFamily="@font/raleway_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/couponHeading"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:text="Coupon"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fontFamily="@font/raleway_medium" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/couponEdt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:background="@drawable/edt_bg_gray"
                            android:gravity="right"
                            android:hint="coupons"
                            android:text="welcome"
                            android:padding="@dimen/_4sdp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fontFamily="@font/raleway_medium" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/applyCouponCode"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:background="@drawable/add_icon"
                            android:gravity="center_vertical"
                            android:text="Apply"
                            android:textColor="#388E3C"
                            android:textSize="18sp"
                            app:fontFamily="@font/raleway_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:text="Balance Due"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fontFamily="@font/raleway_medium" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/balanceDue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/raleway_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:text="IOU"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fontFamily="@font/raleway_medium" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/iouLimit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColorHint="@color/black"
                            android:paddingTop="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_4sdp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:hint="0.00"
                            app:fontFamily="@font/raleway_medium" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_weight=".2"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.hubwallet.apptspos.view.SquireTextView
                        android:id="@+id/oneTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:fontFamily="@font/raleway_medium" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/bg_grey" />

                    <com.hubwallet.apptspos.view.SquireTextView
                        android:id="@+id/twoTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:fontFamily="@font/raleway_medium" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/bg_grey" />

                    <com.hubwallet.apptspos.view.SquireTextView
                        android:id="@+id/threeTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:fontFamily="@font/raleway_medium" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.hubwallet.apptspos.view.SquireTextView
                        android:id="@+id/fourTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:fontFamily="@font/raleway_medium" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/bg_grey" />

                    <com.hubwallet.apptspos.view.SquireTextView
                        android:id="@+id/fiveTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:fontFamily="@font/raleway_medium" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/bg_grey" />

                    <com.hubwallet.apptspos.view.SquireTextView
                        android:id="@+id/sixTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:fontFamily="@font/raleway_medium" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.hubwallet.apptspos.view.SquireTextView
                        android:id="@+id/sevenTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:fontFamily="@font/raleway_medium" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/bg_grey" />

                    <com.hubwallet.apptspos.view.SquireTextView
                        android:id="@+id/eightTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:fontFamily="@font/raleway_medium" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/bg_grey" />

                    <com.hubwallet.apptspos.view.SquireTextView
                        android:id="@+id/nineTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:fontFamily="@font/raleway_medium" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.hubwallet.apptspos.view.SquireTextView
                        android:id="@+id/doubleZeroTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:fontFamily="@font/raleway_medium" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/bg_grey" />

                    <com.hubwallet.apptspos.view.SquireTextView
                        android:id="@+id/zeroTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:fontFamily="@font/raleway_medium" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/bg_grey" />

