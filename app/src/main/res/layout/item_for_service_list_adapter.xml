<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayoutProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_2sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="1dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_4sdp">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_42sdp"
                android:scaleType="fitXY"
                android:src="@drawable/product" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_4sdp">

                <TextView
                    android:id="@+id/makeUp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hair Styling:"
                    android:layout_weight=".4"
                    android:textColor="#9f9999"
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:fontFamily="@font/raleway_medium"/>


                <TextView
                    android:id="@+id/serviceMakeup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Spray"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold"/>

                </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:weightSum="1"
                   android:layout_marginTop="@dimen/_6sdp">

                   <TextView
                       android:id="@+id/duration"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/raleway_medium"
                       android:maxLines="1"
                       android:layout_weight=".4"
                       android:text="Duration"
                       android:textColor="#9f9999"
                       android:textSize="@dimen/_6sdp"
                       android:textStyle="bold"/>

                   <TextView
                       android:id="@+id/serviceDuration"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight=".6"
                       android:ellipsize="end"
                       android:maxLines="1"
                       android:text="quantity"
                       android:textColor="@color/black"
                       android:textSize="@dimen/_6sdp"
                       android:textStyle="bold"/>


               </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_6sdp">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Status"
                        android:layout_weight=".4"
                        android:textColor="#9f9999"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/raleway_medium"/>

                    <TextView
                        android:id="@+id/serviceStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="Active"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/servicePrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="$10"
                        android:textColor="#9f9999"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/raleway_medium"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/closeButtonView"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_marginTop="-5dp"
                    android:rotation="140"
                    android:scaleType="fitXY"
                    android:src="@drawable/close"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>