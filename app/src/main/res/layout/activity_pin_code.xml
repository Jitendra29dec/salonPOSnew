<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="@drawable/gradient">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:columnCount="3"
        android:foregroundGravity="center"
        android:rowCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLAyout">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pin_button_drawable"
            android:gravity="center"
            android:onClick="setPinFunction"
            android:text="1"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pin_button_drawable"
            android:gravity="center"
            android:onClick="setPinFunction"
            android:text="2"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pin_button_drawable"
            android:gravity="center"
            android:onClick="setPinFunction"
            android:text="3"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pin_button_drawable"
            android:gravity="center"
            android:onClick="setPinFunction"
            android:text="4"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pin_button_drawable"
            android:gravity="center"
            android:onClick="setPinFunction"
            android:text="5"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pin_button_drawable"
            android:gravity="center"
            android:onClick="setPinFunction"
            android:text="6"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pin_button_drawable"
            android:gravity="center"
            android:onClick="setPinFunction"
            android:text="7"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pin_button_drawable"
            android:gravity="center"
            android:onClick="setPinFunction"
            android:text="8"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/pin_button_drawable"
            android:gravity="center"
            android:onClick="setPinFunction"
            android:text="9"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pin_button_drawable"
            android:gravity="center"
            android:onClick="setPinFunction"
            android:text="0"
            android:textColor="#000"
            android:textSize="18sp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pin_button_drawable"
            android:gravity="center"
            android:onClick="setPinFunction"
            android:padding="17dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_delete"
            android:tag="cancelTag"
            android:textColor="#000" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pin_button_drawable"
            android:gravity="center"
            android:onClick="setPinFunction"
            android:padding="19dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_ok_mark"
            android:tag="okTag"
            android:textColor="#000" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/linearLAyout"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterPinTextView">


        <EditText
            android:id="@+id/pinCode1EditText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/pincode_drawable"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/pinCode2EditText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/pincode_drawable"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/pinCode3EditText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/pincode_drawable"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/pinCode4EditText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/pincode_drawable"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />


    </LinearLayout>

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/transparent"
        android:onClick="ExitFunction"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/exitTextView" />

    <TextView
        android:id="@+id/exitTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:onClick="ExitFunction"
        android:text="Exit"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/enterPinTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Clock In"
        android:textColor="#F8F7F7"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="165dp" />

    z
</androidx.constraintlayout.widget.ConstraintLayout>