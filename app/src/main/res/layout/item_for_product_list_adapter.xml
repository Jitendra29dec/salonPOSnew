<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayoutProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_2sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="1dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_42sdp"
                android:scaleType="fitXY"
                android:src="@drawable/product" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productNameView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Spray"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_6sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_2sdp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="In Hand:"
                        android:layout_weight=".2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp"
                        android:maxLines="1"
                        android:fontFamily="@font/raleway_medium"/>

                <TextView
                    android:id="@+id/quantityProductView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_6sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_2sdp">

                    <TextView
                        android:id="@+id/makeUp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Price:"
                        android:layout_weight=".2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp"
                        android:maxLines="1"
                        android:fontFamily="@font/raleway_medium"/>


                    <TextView
                        android:id="@+id/productPriceView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".9"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp"
                        android:layout_marginLeft="@dimen/_4sdp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="SKU:"
                        android:layout_weight=".2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp"
                        android:maxLines="1"
                        android:fontFamily="@font/raleway_medium"/>


                    <TextView
                        android:id="@+id/mobileEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".9"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp"
                        android:layout_marginLeft="@dimen/_4sdp"/>

                </LinearLayout>


                <ImageView
                    android:id="@+id/closeButtonView"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_marginTop="-5dp"
                    android:rotation="140"
                    android:scaleType="fitXY"
                    android:src="@drawable/close"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
