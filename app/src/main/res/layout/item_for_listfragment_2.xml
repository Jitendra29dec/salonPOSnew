<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/_8sdp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_10sdp"
        android:layout_gravity="center|start"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="Item"
        android:textColor="#000"
        android:textSize="@dimen/_6sdp" />

    <EditText
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_10sdp"
        android:background="@drawable/login_editext"
        android:hint="Name"
        android:paddingStart="@dimen/_4sdp"
        android:textSize="@dimen/_6sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_10sdp"
        android:layout_gravity="center|start"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Category"
        android:textColor="#000"
        android:textSize="@dimen/_6sdp" />

    <RelativeLayout
        android:layout_width="@dimen/_115sdp"
        android:layout_height="@dimen/_10sdp">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

        <Spinner
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@drawable/login_editext" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_4sdp">

        <TextView
            android:id="@+id/Time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center|start"
            android:text="Price"
            android:textColor="#000"
            android:textSize="@dimen/_6sdp" />

        <EditText

            android:id="@+id/priceEdit"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_below="@id/Time"
            android:background="@drawable/login_editext"
            android:drawableStart="@drawable/ic_attach_money_black_24dp"
            android:inputType="numberDecimal"
            android:paddingStart="1dp"
            android:text="0.00"
            android:textSize="@dimen/_6sdp" />

        <TextView
            android:id="@+id/soldby"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center|start"
            android:text="Sold by:"
            android:textColor="#000"
            android:textSize="@dimen/_7sdp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"
            android:layout_below="@+id/soldby"
            android:layout_toRightOf="@+id/priceEdit"
            android:orientation="vertical">

            <RadioButton

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleX=".6"
                android:scaleY=".6"
                android:text="Each"
                android:textSize="@dimen/_6sdp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="@dimen/_4sdp"
                android:scaleX=".6"
                android:scaleY=".6"
                android:text="Weight"
                android:textSize="@dimen/_6sdp" />
        </RadioGroup>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_10sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center|start"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Barcode"
        android:textColor="#000"
        android:textSize="@dimen/_6sdp" />

    <RelativeLayout
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_10sdp"
        android:gravity="center">

        <EditText
            android:id="@+id/barcode"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@drawable/login_editext"
            android:inputType="number"
            android:paddingStart="@dimen/_4sdp"
            android:textSize="@dimen/_6sdp" />

        <ImageButton
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:paddingTop="@dimen/_1sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:rotation="90"
            android:src="@drawable/ic_dehaze_black_24dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="#DBD9D9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_15sdp"
        android:gravity="center"
        android:text="Other information" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_10sdp"
        android:layout_gravity="center|start"
        android:text="Stock Keep Unit "
        android:textColor="#000"
        android:textSize="@dimen/_6sdp" />

    <EditText
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_10sdp"
        android:background="@drawable/login_editext"
        android:hint="SKU"
        android:inputType="number"
        android:paddingStart="@dimen/_2sdp"
        android:textSize="@dimen/_6sdp" />

    <Button
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/login_editext"
        android:gravity="center"
        android:text="Add Image"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_5sdp" />

    <LinearLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@drawable/login_editext"
            android:backgroundTint="#EF5350"
            android:paddingStart="@dimen/_1sdp"
            android:text="cancel"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_4sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/addItem"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@drawable/login_editext"
            android:backgroundTint="#2196F3"
            android:drawablePadding="@dimen/_1sdp"
            android:text="Add item"
            android:textColor="@color/white"
            android:textSize="@dimen/_4sdp" />
    </LinearLayout>
</LinearLayout>