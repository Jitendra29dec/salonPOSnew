<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrainLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_18sdp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/_2sdp"
    android:paddingEnd="@dimen/_2sdp">

    <ImageButton
        android:id="@+id/starImageButton"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:contentDescription="@string/group_appointment"
        android:src="@drawable/ic_star_unfilled_grey"
        android:visibility="visible" />

    <TextView
        android:id="@+id/customerNameGroupAppointment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start|center"
        android:paddingStart="@dimen/_4sdp"
        android:paddingEnd="@dimen/_4sdp"
        tools:text="Customer Name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_6sdp" />

    <ImageButton
        android:id="@+id/imgBtnShowOption"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/group_appointment"
        android:background="@android:color/transparent"
        android:padding="2dp"
        android:src="@drawable/ic_option_blue"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/deleteImageButton"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/group_appointment"
        android:background="@android:color/transparent"
        android:padding="2dp"
        android:src="@drawable/delete_pop"
        android:visibility="gone" />

</LinearLayout>