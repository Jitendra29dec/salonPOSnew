<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/_8sdp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_10sdp"
        android:layout_gravity="center|start"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Discount Name "
        android:textColor="#000"
        android:textSize="@dimen/_6sdp" />

    <EditText
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_10sdp"
        android:background="@drawable/login_editext"
        android:hint="Discount Name"
        android:paddingStart="@dimen/_2sdp"
        android:textSize="@dimen/_6sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_10sdp"
        android:layout_gravity="center|start"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Discount Value "
        android:textColor="#000"
        android:textSize="@dimen/_5sdp" />

    <EditText
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_10sdp"
        android:background="@drawable/login_editext"
        android:hint="Discount Value"
        android:inputType="number"
        android:paddingStart="@dimen/_2sdp"
        android:textSize="@dimen/_6sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_10sdp"
        android:layout_gravity="center|start"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Discount Type "
        android:textColor="#000"
        android:textSize="@dimen/_6sdp" />

    <RelativeLayout

        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_10sdp">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_editext">

        </Spinner>

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="#F44336"
            android:paddingStart="@dimen/_1sdp"
            android:text="cancel"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_5sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button

            android:id="@+id/fragmentButtonAdd"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="#2196F3"
            android:drawablePadding="@dimen/_1sdp"
            android:text="Add Discount"
            android:textColor="@color/white"
            android:textSize="@dimen/_5sdp" />
    </LinearLayout>
</LinearLayout>