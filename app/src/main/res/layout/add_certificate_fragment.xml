<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_22sdp"
            android:background="@drawable/header_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="Add Certificate"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/imgClose"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_close_white" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_6sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Certificate Number *"
                            android:textColor="#000"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_5sdp"
                            android:textSize="@dimen/_6sdp" />

                        <EditText
                            android:id="@+id/certiNumber"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:textSize="@dimen/_6sdp"
                            android:gravity="center_vertical"
                            android:background="@drawable/rounded_corner_grey_bg" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Template Type *"
                            android:textColor="#000"
                            android:textSize="@dimen/_6sdp" />

                        <Spinner
                            android:id="@+id/spnTamplet"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/spinner_bg" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_6sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Services *"
                            android:textColor="#000"
                            android:textSize="@dimen/_6sdp" />

                        <Spinner
                            android:id="@+id/spnService"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/spinner_bg"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_4sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Message"
                            android:textColor="#000"
                            android:textSize="@dimen/_6sdp" />

                        <EditText
                            android:id="@+id/messageEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/rounded_corner_grey_bg"
                            android:minHeight="@dimen/_30sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:textSize="@dimen/_6sdp"
                            android:paddingEnd="@dimen/_4sdp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_6sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type *"
                            android:textColor="#000"
                            android:textSize="@dimen/_6sdp" />

                        <Spinner
                            android:id="@+id/spnType"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/spinner_bg" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notify by *"
                            android:textColor="#000"
                            android:textSize="@dimen/_6sdp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notify by *"
                            android:textColor="#000"
                            android:textSize="@dimen/_6sdp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notify by *"
                            android:textColor="#000"
                            android:textSize="@dimen/_6sdp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_6sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Amount"
                            android:id="@+id/amountHeading"
                            android:textColor="#000"
                            android:textSize="@dimen/_6sdp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/cashAmountTv"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:inputType="number"
                            android:gravity="center_vertical"
                            android:text="0"
                            android:paddingStart="@dimen/_5sdp"
                            android:textSize="@dimen/_6sdp"
                            android:background="@drawable/rounded_corner_grey_bg"
                            android:hint="Amount" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Issue Date"
                            android:textColor="#000"
                            android:textSize="@dimen/_6sdp" />

                        <TextView
                            android:id="@+id/issueEdt"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_5sdp"
                            android:textSize="@dimen/_6sdp"
                            android:background="@drawable/rounded_corner_grey_bg"
                            android:hint="Select Date" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:text="Expire Date"
                            android:textColor="#000"
                            android:textSize="@dimen/_6sdp" />

                        <TextView
                            android:id="@+id/expireDateEdt"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:padding="@dimen/_4sdp"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_5sdp"
                            android:textSize="@dimen/_6sdp"
                            android:background="@drawable/rounded_corner_grey_bg" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:text="Recipient Name"
                                android:textColor="#000"
                                android:textSize="@dimen/_6sdp" />

                            <TextView
                                android:id="@+id/addNewCustomer"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:text="Add New"
                                android:gravity="end"
                                android:textColor="@color/sky_blue"
                                android:textSize="@dimen/_6sdp" />

                        </LinearLayout>

                        <Spinner
                            android:id="@+id/spnCustomer"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/rounded_corner_grey_bg" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/templateRv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_4sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@color/very_light_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rounded_corner_grey_bg"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp" />

                    <Button
                        android:id="@+id/btnBookAppointment"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/btn_sky_blue"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:text="Add Service"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_6sdp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>