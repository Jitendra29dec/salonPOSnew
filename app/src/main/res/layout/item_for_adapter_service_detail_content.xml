<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_20sdp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/appointmentIDAppointmentInfo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/header2"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:text="4"
        android:textColor="#000" />

    <TextView
        android:id="@+id/appointmentDateAppointmentInfo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/header2"
        android:gravity="center"
        android:text="June 11 2019 07:00AM"
        android:textColor="#000" />

    <TextView
        android:id="@+id/appointmentStylistAppointmentInfo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@drawable/header2"
        android:gravity="center"
        android:text="Maz"
        android:textColor="#000" />

    <TextView
        android:id="@+id/appointmentServiceAppointmentInfo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/header2"
        android:gravity="center"
        android:text="Make up"
        android:textColor="#000" />

    <TextView
        android:id="@+id/appointmentPriceAppointmentInfo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/header2"
        android:gravity="center"
        android:text="$50"
        android:textColor="#000" />

    <TextView
        android:id="@+id/appointmentDurationAppointmentInfo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/header2"
        android:gravity="center"
        android:text="30"
        android:textColor="#000" />
</LinearLayout>