<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:paddingTop="@dimen/_5sdp"
        android:text="Select Service" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/s"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center|start"
            android:text="Select Service"
            android:textSize="@dimen/_7sdp" />

        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toRightOf="@+id/s"
            android:background="@drawable/login_editext">

            <Spinner
                android:id="@+id/ServiceSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/_2sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/ss"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center|start"
            android:text="Select Stylist"
            android:textSize="@dimen/_7sdp" />

        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toRightOf="@+id/ss"
            android:background="@drawable/login_editext">

            <Spinner
                android:id="@+id/stylistSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/_2sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/duration"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center|start"
            android:text="Duration"
            android:textSize="@dimen/_7sdp" />

        <TextView
            android:id="@+id/serviceDurationTextView"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toRightOf="@+id/duration"
            android:background="@drawable/login_editext"
            android:gravity="center"
            android:hint="Minutes"
            android:inputType="number"
            android:maxLength="3"
            android:textSize="@dimen/_6sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/price"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center|start"
            android:text="Price"
            android:textSize="@dimen/_7sdp" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toRightOf="@+id/price"
            android:background="@drawable/login_editext"
            android:gravity="center"
            android:hint="Price"
            android:inputType="number"
            android:maxLength="3"
            android:textSize="@dimen/_6sdp" />
    </RelativeLayout>

    <Button
        android:id="@+id/okBusttonAlert"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="#673AB7"
        android:text="Ok"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp" />

</LinearLayout>