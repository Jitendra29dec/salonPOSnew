<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item >
                <shape android:gravity="center_horizontal|bottom" android:shape="rectangle">
                    <solid android:color="#ffffff" />
                    <stroke android:width="1dp" android:color="#9E9E9EA1" />
                    <corners android:radius="1dp" />
                </shape>
            </item>
            <item android:right="7dp" android:left="@dimen/_7sdp">
                <bitmap android:gravity="center|end"
                    android:src="@drawable/drop_down_arrow" />
            </item>
        </layer-list>
    </item>

</selector>